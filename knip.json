{
    "$schema": "https://unpkg.com/knip@5/schema.json",
    "ignoreIssues": {
        "**/src/generated/**": ["enumMembers"]
    },
    "workspaces": {
        "website": {
            "docusaurus": true,
            "ignore": ["build/**", ".docusaurus/**", "docs/api/**"],
            "ignoreDependencies": ["typedoc", "@docusaurus/*", "@theme/*"]
        },
        "{packages,examples}/*": {
            "project": ["src/**/*", "tests/**/*"]
        },
        "packages/ffi": {
            "project": ["src/**/*", "tests/**/*"],
            "entry": ["src/generated/*/index.ts", "src/index.ts", "src/*/index.ts"]
        }
    }
}
